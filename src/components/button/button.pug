mixin button(href, name, hidden, colorboxSrc)
    - var classes = ['btn__wrap']
    - if (hidden) classes.push('btn__wrap--hidden')
    div(class=classes)
        if href.length > 0
            a(id!=attributes.id, href=href, class!=attributes.class, data-text=name, data-src=colorboxSrc)
                span.btn__overlay
                span.btn__text= name
                
        else
            button(id!=attributes.id, class!=attributes.class, data-text=name, type!=attributes.type, data-src=colorboxSrc)
                span.btn__overlay
                span.btn__text= name
            